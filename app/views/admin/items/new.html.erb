
<div class="col-md-offset-5 col-md-4 col-md-offset-3 text-align-left">

<%= form_for @item, url: admin_items_path do |f| %>
  <h4><%= f.label :title %></h4>
  <%= f.text_field :title %></h4>
  <h4><%= f.label :description %></h4>
  <%= f.text_field :description %></h4>
  <h4><%= f.label :price %></h4>
  <%= f.text_field :price %></h4>
  <h4><%= label_tag :tags %></h4>
  <%= text_field_tag :tags %></h4>
  <h4><%= f.label :image %></h4>
  <%= f.file_field :image %></h4>
  <h4><%= f.submit "add new item!", class: "btn btn-primary" %></h4>
<% end %>
</div>
