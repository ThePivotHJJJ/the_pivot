<h1 class="text-center">admin_order_view_#<%= @order.id %></h1>
â€‹<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Status</th>
        <th>Total Price</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Order Status</th>
      </tr>
    </thead>
    <tbody>
        <div id="item-info">
          <tr>
            <td><%= @order.status %></td>
            <td><%= number_to_currency(@order.total_price) %></td>
            <td><%= @order.created_at %></td>
            <td><%= @order.updated_at %></td>
            <td><%= @order.order_status %></td>
          </tr>
        </div>
    </tbody>
  </table>
</div>

<div class="container">
  <% @order.order_items.each do |order_item| %>
  <div class="col-md-7">
    <div class="row product">
      <div class="col-md-5 col-md-offset-0"><p><%= image_tag order_item.item.image, width: 200 %></p>
      </div>
      <h4><%= link_to order_item.item.title, item_path(order_item.item) %></h4>
      <h4>Quantity: <%= order_item.quantity %></h4>
    </div>
  </div>
  <% end %>
