<header>
  <div class="navbar navbar-default navbar-fat navbar-clean">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar b1"></span>
          <span class="icon-bar b2"></span>
          <span class="icon-bar b3"></span>
        </button>
        <%= link_to "PABOI", root_path, class: "navbar-brand" %>
        <small>( Put A Bid On It! )</small>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Items", items_path %></li>
          <li><%= link_to "Shops", shops_path %></li>
          <li><%= link_to "Sell on PABOI", "#" %></li>
          <li><%= link_to "Cart", "#" %></li>
          <% if current_user %>
            <li><%= link_to "My Profile", dashboard_path %></li>
            <li><%= link_to "Sign Out", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Sign In", login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
