<footer class="site-footer">
  <div class="container">
    <section class="row">
      <div class="col-sm-6 col-md-4">
        <div class="inner">
          <h5>Join the community</h5>
          <ul>
            <% unless current_user %>
              <li><%= link_to "Register", new_user_path %></li>
            <% end %>
            <% unless admin? %>
              <li><%= link_to "Sell on PABOI", new_shop_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="inner">
          <h5>Discover</h5>
          <ul>
            <% Tag.limit(4).order("RANDOM()").each do |tag| %>
              <li><%= link_to tag.name, tag %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-sm-12 col-md-4">
        <div class="inner">
          <h5>Follow PABOI</h5>
          <ul>
            <li><%= link_to "Facebook",  "#" %></li>
            <li><%= link_to "Twitter",   "#" %></li>
            <li><%= link_to "Pinterest", "#" %></li>
            <li><%= link_to "Instagram", "#" %></li>
          </ul>
        </div>
      </div>
    </section>
  </div>
</footer>
