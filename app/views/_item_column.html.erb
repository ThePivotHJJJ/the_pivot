<% if item.active %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 item">
  <p class="item-title"><%= link_to "#{item.title}", shop_item_path(shop: item.shop.slug, id: item.id), class: "item-title" %></p>
  <%= link_to image_tag(item.image, class: "items", width: "250", height: "200"), shop_item_path(shop: item.shop.slug, id: item.id) %>
  <h2><%= format_price(item.price) %></h2>
  <h3><%= item.description %></h3>
  </div>
<% end %>
