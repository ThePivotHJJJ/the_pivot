<h1 class="text-center"> All Tags</h1>
  <% @tags.each do |tag| %>
  <div class="container row">
  <h2> <%= link_to "#{tag.name}", tag_path(tag.name) %></h2>
  <% if tag.gifs %>
  <div class="container row">
    <% tag.gifs.each do |gif| %>
    <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3 gif">
      <p class="text-center">  <%= link_to "#{gif.title}", gif_path(gif) %> </p>
      <p><%= image_tag(gif.image, width: "250")%></p>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
<% end %>
