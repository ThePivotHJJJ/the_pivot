<section class="col-md-12 text-align-left row">
  <div class="container">
    <h1>Create Your Shop</h1>

    <%= form_for @shop do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <%= f.submit "Create shop", class: "btn btn-primary col-xs-12" %>
    <% end %>
  </div>
</section>
